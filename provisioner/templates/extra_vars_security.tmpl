---
# name prefix for all the VMs
ec2_name_prefix: security

# amount of work benches to provision
student_total: 2

# workshop is put into security mode
workshop_type: test-security

# region where the nodes will live
ec2_region: us-east-1

# set the console type
security_console: 'qradar'

# required windows password
windows_password: Emergent+workshop2021!

## Optional Variables

# password used for student account on control node
admin_password: emergent

# creates AWS S3 website for ec2_name_prefix.workshop_dns_zone
# this is defaulted to on as of May 13th, 2020
create_login_page: true

# Sets the Route53 DNS zone to use for the S3 website
workshop_dns_zone: lab-emergent360.com

# adds a form that prompts for name and email to allocate student credentials
attendance: true

# this will install Ansible Tower on all control nodes
towerinstall: true
